<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="imsreenadh.gpacgpa.SecondSemester">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/entergrades"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="Enter Grades"
                android:textSize="18sp" />

            <!-- 1301 -->
            <TextView
                android:id="@+id/_1301"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/entergrades"
                android:padding="10dp"
                android:text="1301 : " />

            <Spinner
                android:id="@+id/spinner1301"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/entergrades"
                android:layout_toEndOf="@+id/_1301"
                android:entries="@array/grades"
                android:padding="10dp"
                android:textAlignment="center" />
            <!-- 1302 -->
            <TextView
                android:id="@+id/_1302"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/spinner1301"
                android:padding="10dp"
                android:text="1302 : " />

            <Spinner
                android:id="@+id/spinner1302"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/spinner1301"
                android:layout_toEndOf="@+id/_1302"
                android:entries="@array/grades"
                android:padding="10dp"
                android:textAlignment="center" />

            <!-- 1303 -->
            <TextView
                android:id="@+id/_1303"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/spinner1302"
                android:padding="10dp"
                android:text="1303 : " />

            <Spinner
                android:id="@+id/spinner1303"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/spinner1302"
                android:layout_toEndOf="@+id/_1303"
                android:entries="@array/grades"
                android:padding="10dp"
                android:textAlignment="center" />

            <!-- 1304 -->
            <TextView
                android:id="@+id/_1304"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/spinner1303"
                android:padding="10dp"
                android:text="1304 : " />

            <Spinner
                android:id="@+id/spinner1304"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/spinner1303"
                android:layout_toEndOf="@+id/_1304"
                android:entries="@array/grades"
                android:padding="10dp"
                android:textAlignment="center" />

            <!-- 1305 -->
            <TextView
                android:id="@+id/_1305"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/spinner1304"
                android:padding="10dp"
                android:text="1305 : " />

            <Spinner
                android:id="@+id/spinner1305"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/spinner1304"
                android:layout_toEndOf="@+id/_1305"
                android:entries="@array/grades"
                android:padding="10dp"
                android:textAlignment="center" />

            <!-- 1306 -->
            <TextView
                android:id="@+id/_1306"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/spinner1305"
                android:padding="10dp"
                android:text="1306 : " />

            <Spinner
                android:id="@+id/spinner1306"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/spinner1305"
                android:layout_toEndOf="@+id/_1306"
                android:entries="@array/grades"
                android:padding="10dp"
                android:textAlignment="center" />

            <!-- 1307 -->
            <TextView
                android:id="@+id/_13L1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/spinner1306"
                android:padding="10dp"
                android:text="13L1 : " />

            <Spinner
                android:id="@+id/spinner13L1"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/spinner1306"
                android:layout_toEndOf="@+id/_13L1"
                android:entries="@array/grades"
                android:padding="10dp"
                android:textAlignment="center" />

            <!-- 1308 -->
            <TextView
                android:id="@+id/_13L2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/spinner13L1"
                android:padding="10dp"
                android:text="13L2 : " />

            <Spinner
                android:id="@+id/spinner13L2"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/spinner13L1"
                android:layout_toEndOf="@+id/_13L1"
                android:entries="@array/grades"
                android:padding="10dp"
                android:textAlignment="center" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/_13L2"
                android:orientation="horizontal"
                android:weightSum="1">

                <com.rey.material.widget.Button
                    android:id="@+id/calculateButton"
                    style="@style/Material.Drawable.Ripple.Wave.Light"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/spinner13L2"
                    android:layout_marginStart="5dp"
                    android:layout_weight="0.5"
                    android:background="#448AFF"
                    android:onClick="calculateGPA"
                    android:text="CALCULATE"
                    android:textColor="#FFF"
                    app:rd_backgroundAnimDuration="0"
                    app:rd_enable="true"
                    app:rd_rippleAnimDuration="100"
                    app:rd_rippleColor="#65c9ddff" />

                <com.rey.material.widget.Button
                    android:id="@+id/cancelButton"
                    style="@style/Material.Drawable.Ripple.Wave.Light"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_weight="0.5"
                    android:background="#9E9E9E"
                    android:onClick="cancelButtonClicked"
                    android:text="CANCEL"
                    android:textColor="#FFF"
                    app:rd_backgroundAnimDuration="0"
                    app:rd_enable="true"
                    app:rd_rippleAnimDuration="600"
                    app:rd_rippleColor="#64ffffff" />
            </LinearLayout>
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>
