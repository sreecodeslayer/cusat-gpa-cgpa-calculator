<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="imsreenadh.gpacgpa.SixthSemester">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/entergrades"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="Enter Grades"
                android:textSize="18sp" />

            <!-- 1601 -->
            <TextView
                android:id="@+id/_1601"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/entergrades"
                android:padding="10dp"
                android:text="1601 : " />

            <Spinner
                android:id="@+id/spinner1601"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/entergrades"
                android:layout_toEndOf="@+id/_1601"
                android:entries="@array/grades"
                android:padding="10dp"
                android:textAlignment="center" />
            <!-- 1602 -->
            <TextView
                android:id="@+id/_1602"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/spinner1601"
                android:padding="10dp"
                android:text="1602 : " />

            <Spinner
                android:id="@+id/spinner1602"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/spinner1601"
                android:layout_toEndOf="@+id/_1602"
                android:entries="@array/grades"
                android:padding="10dp"
                android:textAlignment="center" />

            <!-- 1603 -->
            <TextView
                android:id="@+id/_1603"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/spinner1602"
                android:padding="10dp"
                android:text="1603 : " />

            <Spinner
                android:id="@+id/spinner1603"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/spinner1602"
                android:layout_toEndOf="@+id/_1603"
                android:entries="@array/grades"
                android:padding="10dp"
                android:textAlignment="center" />

            <!-- 1604 -->
            <TextView
                android:id="@+id/_1604"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/spinner1603"
                android:padding="10dp"
                android:text="1604 : " />

            <Spinner
                android:id="@+id/spinner1604"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/spinner1603"
                android:layout_toEndOf="@+id/_1604"
                android:entries="@array/grades"
                android:padding="10dp"
                android:textAlignment="center" />

            <!-- 1605 -->
            <TextView
                android:id="@+id/_1605"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/spinner1604"
                android:padding="10dp"
                android:text="1605 : " />

            <Spinner
                android:id="@+id/spinner1605"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/spinner1604"
                android:layout_toEndOf="@+id/_1605"
                android:entries="@array/grades"
                android:padding="10dp"
                android:textAlignment="center" />

            <!-- 1606 -->
            <TextView
                android:id="@+id/_1606"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/spinner1605"
                android:padding="10dp"
                android:text="1606 : " />

            <Spinner
                android:id="@+id/spinner1606"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/spinner1605"
                android:layout_toEndOf="@+id/_1606"
                android:entries="@array/grades"
                android:padding="10dp"
                android:textAlignment="center" />

            <!-- 1607 -->
            <TextView
                android:id="@+id/_16L1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/spinner1606"
                android:padding="10dp"
                android:text="16L1 : " />

            <Spinner
                android:id="@+id/spinner16L1"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/spinner1606"
                android:layout_toEndOf="@+id/_16L1"
                android:entries="@array/grades"
                android:padding="10dp"
                android:textAlignment="center" />

            <!-- 1608 -->
            <TextView
                android:id="@+id/_16L2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/spinner16L1"
                android:padding="10dp"
                android:text="16L2 : " />

            <Spinner
                android:id="@+id/spinner16L2"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/spinner16L1"
                android:layout_toEndOf="@+id/_16L1"
                android:entries="@array/grades"
                android:padding="10dp"
                android:textAlignment="center" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/_16L2"
                android:orientation="horizontal"
                android:weightSum="1">

                <Button
                    android:id="@+id/calculateButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/spinner16L2"
                    android:layout_marginStart="5dp"
                    android:layout_weight="0.5"
                    android:background="#5E35B1"
                    android:onClick="calculateGPA"
                    android:text="CALCULATE"
                    android:textColor="#FFF" />

                <Button
                    android:id="@+id/cancelButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_weight="0.5"
                    android:background="#9E9E9E"
                    android:onClick="cancelButtonClicked"
                    android:text="CANCEL"
                    android:textColor="#FFF" />
            </LinearLayout>
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>
