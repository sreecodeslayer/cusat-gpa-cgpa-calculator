<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="imsreenadh.gpacgpa.ForthSemester">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/entergrades"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="Enter Grades"
                android:textSize="18sp" />

            <!-- 1401 -->
            <TextView
                android:id="@+id/_1401"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/entergrades"
                android:padding="10dp"
                android:text="1401 : " />

            <Spinner
                android:id="@+id/spinner1401"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/entergrades"
                android:layout_toEndOf="@+id/_1401"
                android:entries="@array/grades"
                android:padding="10dp"
                android:textAlignment="center" />
            <!-- 1402 -->
            <TextView
                android:id="@+id/_1402"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/spinner1401"
                android:padding="10dp"
                android:text="1402 : " />

            <Spinner
                android:id="@+id/spinner1402"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/spinner1401"
                android:layout_toEndOf="@+id/_1402"
                android:entries="@array/grades"
                android:padding="10dp"
                android:textAlignment="center" />

            <!-- 1403 -->
            <TextView
                android:id="@+id/_1403"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/spinner1402"
                android:padding="10dp"
                android:text="1403 : " />

            <Spinner
                android:id="@+id/spinner1403"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/spinner1402"
                android:layout_toEndOf="@+id/_1403"
                android:entries="@array/grades"
                android:padding="10dp"
                android:textAlignment="center" />

            <!-- 1404 -->
            <TextView
                android:id="@+id/_1404"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/spinner1403"
                android:padding="10dp"
                android:text="1404 : " />

            <Spinner
                android:id="@+id/spinner1404"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/spinner1403"
                android:layout_toEndOf="@+id/_1404"
                android:entries="@array/grades"
                android:padding="10dp"
                android:textAlignment="center" />

            <!-- 1405 -->
            <TextView
                android:id="@+id/_1405"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/spinner1404"
                android:padding="10dp"
                android:text="1405 : " />

            <Spinner
                android:id="@+id/spinner1405"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/spinner1404"
                android:layout_toEndOf="@+id/_1405"
                android:entries="@array/grades"
                android:padding="10dp"
                android:textAlignment="center" />

            <!-- 1406 -->
            <TextView
                android:id="@+id/_1406"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/spinner1405"
                android:padding="10dp"
                android:text="1406 : " />

            <Spinner
                android:id="@+id/spinner1406"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/spinner1405"
                android:layout_toEndOf="@+id/_1406"
                android:entries="@array/grades"
                android:padding="10dp"
                android:textAlignment="center" />

            <!-- 1407 -->
            <TextView
                android:id="@+id/_14L1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/spinner1406"
                android:padding="10dp"
                android:text="14L1 : " />

            <Spinner
                android:id="@+id/spinner14L1"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/spinner1406"
                android:layout_toEndOf="@+id/_14L1"
                android:entries="@array/grades"
                android:padding="10dp"
                android:textAlignment="center" />

            <!-- 1408 -->
            <TextView
                android:id="@+id/_14L2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/spinner14L1"
                android:padding="10dp"
                android:text="14L2 : " />

            <Spinner
                android:id="@+id/spinner14L2"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/spinner14L1"
                android:layout_toEndOf="@+id/_14L1"
                android:entries="@array/grades"
                android:padding="10dp"
                android:textAlignment="center" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/_14L2"
                android:orientation="horizontal"
                android:weightSum="1">

                <Button
                    android:id="@+id/calculateButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/spinner14L2"
                    android:layout_marginStart="5dp"
                    android:layout_weight="0.5"
                    android:background="#FFAB40"
                    android:onClick="calculateGPA"
                    android:text="CALCULATE"
                    android:textColor="#FFF" />

                <Button
                    android:id="@+id/cancelButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_weight="0.5"
                    android:background="#9E9E9E"
                    android:onClick="cancelButtonClicked"
                    android:text="CANCEL"
                    android:textColor="#FFF" />
            </LinearLayout>
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>
