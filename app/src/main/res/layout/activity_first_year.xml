<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="imsreenadh.gpacgpa.FirstYear">

    <com.rey.material.widget.EditText
        android:id="@+id/enterRegNum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Register Number"
        android:inputType="number"
        app:et_dividerPadding="8dp"
        app:et_helper="1101"
        app:et_labelEnable="true"
        app:et_labelPadding="8dp"
        app:et_labelTextColor="@color/colorAccent"
        app:et_labelTextSize="18sp"
        app:spn_arrowColor="@color/colorAccent" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/enterRegNum">

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusableInTouchMode="true"
            android:orientation="vertical"
            android:padding="10dp"
            android:weightSum="2">

            <TextView
                android:id="@+id/entergrades"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="10dp"
                android:text="Enter Grades" />

            <!-- 1101 -->
            <com.rey.material.widget.Spinner
                android:id="@+id/spinner1101"
                style="@style/Material.Widget.Spinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="start|center_vertical"
                android:layout_weight="0.75"
                android:padding="8dp"
                android:textAlignment="center"
                app:rd_style="@style/Material.Drawable.Ripple.Wave"
                app:spn_arrowSwitchMode="true"
                app:spn_dividerColor="@color/colorAccent"
                app:spn_label="1101"
                app:spn_labelEnable="true"
                app:spn_labelTextColor="@android:color/darker_gray" />
            <!-- 1102 -->

            <TextView
                android:id="@+id/_1102"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="1102 : " />

            <com.rey.material.widget.Spinner
                android:id="@+id/spinner1102"
                style="@style/Material.Widget.Spinner"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:entries="@array/grades"
                android:padding="8dp"
                android:textAlignment="center" />

            <!-- 1103 -->
            <TextView
                android:id="@+id/_1103"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="1103 : " />

            <com.rey.material.widget.Spinner
                android:id="@+id/spinner1103"
                style="@style/Material.Widget.Spinner"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/spinner1102"
                android:layout_toEndOf="@+id/_1103"
                android:entries="@array/grades"
                android:padding="8dp"
                android:textAlignment="center" />

            <!-- 1104 -->
            <TextView
                android:id="@+id/_1104"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/spinner1103"
                android:padding="10dp"
                android:text="1104 : " />

            <com.rey.material.widget.Spinner
                android:id="@+id/spinner1104"
                style="@style/Material.Widget.Spinner"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/spinner1103"
                android:layout_toEndOf="@+id/_1104"
                android:entries="@array/grades"
                android:padding="8dp"
                android:textAlignment="center" />

            <!-- 1105 -->
            <TextView
                android:id="@+id/_1105"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="1105 : " />

            <com.rey.material.widget.Spinner
                android:id="@+id/spinner1105"
                style="@style/Material.Widget.Spinner"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:entries="@array/grades"
                android:padding="8dp"
                android:textAlignment="center" />

            <!-- 1106 -->
            <TextView
                android:id="@+id/_1106"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="1106 : " />

            <com.rey.material.widget.Spinner
                android:id="@+id/spinner1106"
                style="@style/Material.Widget.Spinner"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:entries="@array/grades"
                android:padding="8dp"
                android:textAlignment="center" />

            <!-- 1107 -->
            <TextView
                android:id="@+id/_1107"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="1107 : " />

            <com.rey.material.widget.Spinner
                android:id="@+id/spinner1107"
                style="@style/Material.Widget.Spinner"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:entries="@array/grades"
                android:padding="8dp"
                android:textAlignment="center" />

            <!-- 1108 -->
            <TextView
                android:id="@+id/_1108"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/spinner1107"
                android:padding="10dp"
                android:text="1108 : " />

            <com.rey.material.widget.Spinner
                android:id="@+id/spinner1108"
                style="@style/Material.Widget.Spinner"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:entries="@array/grades"
                android:padding="8dp"
                android:textAlignment="center" />

            <!-- 1109 -->
            <TextView
                android:id="@+id/_1109"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="1109 : " />

            <com.rey.material.widget.Spinner
                android:id="@+id/spinner1109"
                style="@style/Material.Widget.Spinner"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:entries="@array/grades"
                android:padding="8dp"
                android:textAlignment="center" />

            <!-- 11 L1 -->
            <TextView
                android:id="@+id/_11L1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="11 L1 : " />

            <com.rey.material.widget.Spinner
                android:id="@+id/spinner11L1"
                style="@style/Material.Widget.Spinner"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:entries="@array/grades"
                android:padding="8dp"
                android:textAlignment="center" />

            <!-- 11 L2 -->
            <TextView
                android:id="@+id/_11L2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="11 L2 : " />

            <com.rey.material.widget.Spinner
                android:id="@+id/spinner11L2"
                style="@style/Material.Widget.Spinner"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:entries="@array/grades"
                android:padding="8dp"
                android:textAlignment="center" />

            <!-- 11 L3 -->
            <TextView
                android:id="@+id/_11L3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="11 L3 : " />

            <com.rey.material.widget.Spinner
                android:id="@+id/spinner11L3"
                style="@style/Material.Widget.Spinner"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/spinner11L2"
                android:layout_toEndOf="@+id/_11L3"
                android:entries="@array/grades"
                android:padding="8dp"
                android:textAlignment="center" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/_11L3"
                android:orientation="horizontal"
                android:weightSum="1">

                <com.rey.material.widget.Button
                    android:id="@+id/calculateButton"
                    style="@style/Material.Drawable.Ripple.Wave.Light"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/spinner11L3"
                    android:layout_marginStart="5dp"
                    android:layout_weight="0.5"
                    android:background="#FF5252"
                    android:onClick="calculateGPA"
                    android:text="CALCULATE"
                    android:textColor="#FFF"
                    app:rd_backgroundAnimDuration="0"
                    app:rd_enable="true"
                    app:rd_rippleAnimDuration="100"
                    app:rd_rippleColor="#64ffc9c9" />

                <com.rey.material.widget.Button
                    android:id="@+id/cancelButton"
                    style="@style/Material.Drawable.Ripple.Wave.Light"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_weight="0.5"
                    android:background="#9E9E9E"
                    android:onClick="cancelButtonClicked"
                    android:text="CANCEL"
                    android:textColor="#FFF"
                    app:rd_backgroundAnimDuration="0"
                    app:rd_enable="true"
                    app:rd_rippleAnimDuration="600"
                    app:rd_rippleColor="#64ffffff" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>
